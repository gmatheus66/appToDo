<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main" android:background="@color/back">


    <com.google.android.gms.common.SignInButton
            android:id="@+id/google_button"
            android:layout_width="278dp"
            android:layout_height="56dp"
            android:layout_marginBottom="184dp"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline12" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline14"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.637"/>
    <EditText
            android:layout_width="239dp"
            android:layout_height="38dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextPass"
            android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toTopOf="@+id/btnLogin" android:background="@color/colorPrimary"
            android:textColor="@color/white" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline12" android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline14"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.515" android:hint="Password"
            android:textColorHint="@color/white"/>
    <EditText
            android:layout_width="239dp"
            android:layout_height="38dp"
            android:inputType="textPersonName"
            android:text="Email"
            android:ems="10"
            android:id="@+id/editTextEmail" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextPass" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
            android:background="@color/colorPrimary"
            android:textColor="@color/white" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline12" android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline14"
            android:layout_marginRight="8dp"/>
    <Button
            android:text="Login"
            android:layout_width="161dp"
            android:layout_height="42dp"
            android:id="@+id/btnLogin" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/google_button"
            android:background="@color/green" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline12" android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline14"
            android:layout_marginRight="8dp" android:textColor="@color/white"
            app:layout_constraintHorizontal_bias="0.502"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="32dp" android:id="@+id/guideline12"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="212dp"
            android:id="@+id/guideline13"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="384dp"
            android:id="@+id/guideline14"/>
    <Button
            android:text="Register"
            android:layout_width="161dp"
            android:layout_height="42dp"
            android:id="@+id/btnRes" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/google_button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline14"
            app:layout_constraintStart_toStartOf="@+id/guideline12" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintVertical_bias="0.256" android:textColor="@color/white"
            android:background="@color/green"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="128dp"
            android:id="@+id/guideline15"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="289dp"
            android:id="@+id/guideline16"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="89dp" android:id="@+id/guideline17"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="329dp"
            android:id="@+id/guideline18"/>

</androidx.constraintlayout.widget.ConstraintLayout>